<mujoco version="1.0">
	<compiler inertiafromgeom="true"/>
	<engine gravity="0 0 -9.81" integrator="RK4" timestep="0.0001" regimpulse="0.001" imperrreduce="0.01">
		<impulse algorithm="GS" atype="full" maxiter="5"/>
	</engine>
	<default>
		<geom contype="1" condim="3" mindist="0.01" rgba=".8 .7 0 1" friction="1 .3 .3"/>
	</default>
	
    <world angle="degree">
		<geom type="plane" pos="0 0 0"/>

      <body name="upper">
        <geom type="capsule" fromto="0     0     1.5 
                                     0.607 0     0.703" size=".1" />
        <joint type="hinge" pos="0 0 1.5" axis="0 1 0" />

        <body name="lower">
          <geom type="capsule" fromto="0.607 0     0.703 
                                       1.525 0     1.074" size=".1" />
		  <!-- Joint limits kept 1 degree below maximum to allow "360 degree" movement that doesn't go through parent arm. -->
          <joint limtype="1" limit="-104.29 253.71" type="hinge" pos="0.607 0     0.703" axis="0 1 0" />
          <site pos="1.525 0     1.074" />
          
          <body name="finger1_1">
            <geom type="capsule" fromto="1.525 0     1.074
                                         1.364 0     0.842" size=".05" />
            <joint limtype="1" limit="-90 45" type="hinge" pos="1.525 0     1.074" axis="0 1 0" />

            <body name="finger1_2">
              <geom type="capsule" fromto="1.364 0     0.842
                                           1.364 0     0.642" size=".05" />
              <joint limtype="1" limit="-135 45" type="hinge" pos="1.364 0     0.842" axis="0 1 0" />
              <site pos="1.364 0     0.592" />
            </body>
            
          </body>

          <body name="finger2_1">
            <geom type="capsule" fromto="1.525 0     1.074
                                         1.675 0     0.834" size=".05" />
            <joint limtype="1" limit="-45 90" type="hinge" pos="1.525 0     1.074" axis="0 1 0" />

            <body name="finger2_2">
              <geom type="capsule" fromto="1.675 0     0.834
                                           1.675 0     0.634" size=".05" />
              <joint limtype="1" limit="-45 135" type="hinge" pos="1.675 0     0.834" axis="0 1 0" />
              <site pos="1.675 0     0.584" />
            </body>
            
          </body>
        </body>
      </body>

      <body name="ball">
        <geom type="sphere" pos="1.5 0 .1" size=".1" />
        <!-- use y-axis for 3 dimensional arm -->
        <!--<joint type="slide" pos="1.5 0 .1" axis="0 1 0" />-->
        <joint type="slide" pos="1.5 0 .1" axis="1 0 0" />
        <joint type="slide" pos="1.5 0 .1" axis="0 0 1" />
      </body>

	</world>
	
</mujoco>
