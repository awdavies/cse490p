<mujoco version="1.0">
	<compiler inertiafromgeom="true"/>
	<engine gravity="0 0 -9.81" integrator="RK4" timestep="0.001" regimpulse="0.001" imperrreduce="0.01">
		<impulse algorithm="GS" atype="full" maxiter="5"/>
	</engine>
	<default>
		<geom contype="1" condim="3" mindist="0.01" rgba=".8 .7 0 1" friction="1 .3 .3"/>
	</default>
	
    <world angle="degree">
		<geom type="plane" pos="0 0 0"/>

      <body name="upper">
        <geom name="upper" type="capsule" fromto="0 0 1.5 0 0 .5" size=".1" />
        <joint name="upper" type="hinge" pos="0 0 1.5" axis="0 1 0" />
		<site name="start_upper" pos="0 0 1.5" />

        <body name="lower">
          <geom name="lower" type="capsule" fromto="0 0 .5 1 0 .5" size=".1" />
          <joint name="lower" type="hinge" pos="0 0 .5" axis="0 1 0" />
          <site name="end_lower" pos="1 0 .5" />
          
          <body name="finger1_1">
            <geom name="finger1_1" type="capsule" fromto="1 0 .5 1.2 0 .7" size=".05" />
            <joint name="finger1_1" limtype="1" limit="-90 90" type="hinge" pos="1 0 .5" axis="0 1 0" />

            <body name="finger1_2">
              <geom name="finger1_2" type="capsule" fromto="1.2 0 .7 1.4 0 .7" size=".05" />
              <joint name="finger1_2" limtype="1" limit="-45 135" type="hinge" pos="1.2 0 .7" axis="0 1 0" />
              <site name="end_finger1" pos="1.45 0 .7" />
            </body>
            
          </body>

          <body name="finger2_1">
            <geom name="finger2_1" type="capsule" fromto="1 0 .5 1.2 0 .3" size=".05" />
            <joint name="finger2_1" limtype="1" limit="-90 90" type="hinge" pos="1 0 .5" axis="0 1 0" />

            <body name="finger2_2">
              <geom name="finger2_2" type="capsule" fromto="1.2 0 .3 1.4 0 .3" size=".05" />
              <joint name="finger2_2" limtype="1" limit="-135 45" type="hinge" pos="1.2 0 .3" axis="0 1 0" />
              <site name="end_finger2" pos="1.45 0 .3" />
            </body>
            
          </body>
        </body>
      </body>

      <body name="ball">
        <geom name="ball" type="sphere" pos="1.5 0 .1" size=".1" />
        <!-- use y-axis for 3 dimensional arm -->
        <!--<joint type="slide" pos="1.5 0 .1" axis="0 1 0" />-->
        <joint name="ball_x" type="slide" pos="1.5 0 .1" axis="1 0 0" />
        <joint name="ball_z" type="slide" pos="1.5 0 .1" axis="0 0 1" />
      </body>

	</world>
	
</mujoco>
